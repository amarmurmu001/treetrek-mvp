rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if true; // Anyone can read user profiles
      allow write: if request.auth != null && request.auth.uid == userId; // Only the user can write their own profile
    }
    
    // Tree plantings
    match /trees/{treeId} {
      allow read: if true; // Anyone can read tree plantings
      allow create: if request.auth != null; // Authenticated users can create tree plantings
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || // User can update their own tree plantings
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true); // Admins can update any tree planting
    }
    
    // Rewards
    match /rewards/{rewardId} {
      allow read: if true; // Anyone can read rewards
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Only admins can manage rewards
    }
    
    // Redemptions
    match /redemptions/{redemptionId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || // User can read their own redemptions
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true); // Admins can read all redemptions
      allow create: if request.auth != null; // Authenticated users can create redemptions
    }
  }
} 