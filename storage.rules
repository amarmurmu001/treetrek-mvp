rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Tree photos
    match /trees/{userId}/{type}/{fileName} {
      allow read: if true; // Anyone can view tree photos
      allow write: if request.auth != null && request.auth.uid == userId; // Only the user can upload their own tree photos
    }
    
    // User avatars
    match /avatars/{userId} {
      allow read: if true; // Anyone can view avatars
      allow write: if request.auth != null && request.auth.uid == userId; // Only the user can upload their own avatar
    }
    
    // Reward images
    match /rewards/{fileName} {
      allow read: if true; // Anyone can view reward images
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Only admins can upload reward images
    }
  }
} 